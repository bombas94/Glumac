<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Naslov"
        android:text="Naslov"
        android:textStyle="bold"
        android:textSize="32sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tvIme"
        android:text="Ime:"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/etIme"
        android:layout_alignTop="@+id/etIme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/etIme"
        android:text="Unesite ime"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Naslov"
        android:layout_toRightOf="@id/tvIme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tvPrezime"
        android:text="Prezime:"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/etPrezime"
        android:layout_alignTop="@+id/etPrezime"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/etPrezime"
        android:text="Unesite prezime"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/etIme"
        android:layout_toRightOf="@id/tvPrezime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvOpis"
        android:text="Opis: "
        android:layout_below="@+id/tvPrezime"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/etOpis"
        android:text="Unesite opis"
        android:layout_width="match_parent"
        android:layout_below="@+id/tvOpis"
        android:layout_above="@+id/bPosalji"
        android:layout_height="0dp"/>

    <Button
        android:id="@+id/bPosalji"
        android:text="Posalji"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/vSredina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/bOdustani"
        android:text="Odustani"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/vSredina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/vSredina"
        android:layout_width="0dp"
        android:layout_centerHorizontal="true"
        android:layout_height="match_parent"/>


</RelativeLayout>